<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iot.diaper.TermActivity">

    <EditText
        android:id="@+id/endYear"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView18"
        app:layout_constraintLeft_toRightOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="243dp"
        android:text="끝 연도"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <EditText
        android:id="@+id/endMonth"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView20"
        app:layout_constraintLeft_toRightOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="227dp"
        android:text="일"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="227dp"
        android:text="월"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/endDay"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView19"
        app:layout_constraintLeft_toRightOf="@+id/textView11" />

    <EditText
        android:id="@+id/startMonth"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        app:layout_constraintLeft_toRightOf="@+id/textView11" />

    <EditText
        android:id="@+id/startDay"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
        app:layout_constraintLeft_toRightOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="일"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="월"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="시작 연도"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <EditText
        android:id="@+id/startYear"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
        app:layout_constraintLeft_toRightOf="@+id/textView11" />

    <Button
        android:id="@+id/btn_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="기간설정"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDay" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21" />

</android.support.constraint.ConstraintLayout>
